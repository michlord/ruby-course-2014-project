<%- model_class = Movie -%>
       
<div class="row">
  <div class="col-lg-9">
  <h2> <%= @movie.title %> <small>(year)</small> </h2>
  <p>Rating: <%= @movie.rating %><!--create star rating helper--></p>
  <h3>Overview</h3>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Crew</h3>
  <h3>Cast<small><a href="#" class="pull-right" data-toggle="collapse" data-target=".cast_list">Show All</a></small></h3>
  
  <div class="collapse in cast_list">
    <table class="table table-hover">
      <thead>  
        <tr>
        <th>
        Actor Name
        </th>
        <th>
        Character
        </th>
        </tr>
      </thead>
      <tbody>
      <% @cast_list[0..2].each do |cast| %>
        <tr>
        <td>
        <%= cast.actor.name %>
        </td>
        <td>
        <%= cast.character %>
        </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-collapse collapse out cast_list">
    <table class="table table-hover">
      <thead>  
        <tr>
        <th>
        Actor Name
        </th>
        <th>
        Character
        </th>
        </tr>
      </thead>
      <tbody>
      <% @cast_list.each do |cast| %>
        <tr>
        <td>
        <%= cast.actor.name %>
        </td>
        <td>
        <%= cast.character %>
        </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  
  <h3>Reviews<small><a href="#" class="pull-right">Show All</a></small></h3>
  </div>
  <div class="col-lg-3">
    <div class="movie_poster">
      <%= image_tag("no_image.png", class: "img-thumbnail center-block") %>
    </div>
    <div class="movie_info">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:webpage) %>:</strong></dt>
        <dd><%= link_to "Link", @movie.webpage %></dd>
        <dt><strong><%= model_class.human_attribute_name(:runtime) %>:</strong></dt>
        <dd><%= @movie.runtime %> min.</dd>
        <dt><strong>Genre:</strong></dt>
        <dd>
          <% @genres_list[0..-2].each do |g| %>
          <%= g.name %>,
          <% end %>
          <%= @genres_list.last.name %>
        </dd>
      </dl>
    </div>
  </div>
</div>